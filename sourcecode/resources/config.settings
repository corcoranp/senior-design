; ROBOT PHYSICAL PROPERTIES SECTIONS
;-----------------------------------------------------
[ROBOT]
robot_x					= 12				; the robots width or x component in inches
robot_y					= 12				; the robot's length or y component in inches
robot_z					= 12				; the robot's height or z component in inches


